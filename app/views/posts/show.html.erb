<div class="row justify-content-center">
  <div class="topic-name">
    <h1>Detail...</h1>
  </div>
</div>
<div class="row comment">
  <i class="fas fa-comment"><%= @comments.count %></i>
</div>
<div class="row bravo">
  <% if @post.bravo_by?(current_user) %>
		<%= link_to post_bravo_path(@post), method: :delete do %>
			<span>
			  Bravo !! <i class="fas fa-hiking" style="color: #FF66CC;"></i>
			  <%= @post.bravos.count %>
			</span>
		<% end %>
	<% else %>
		<%= link_to post_bravos_path(@post), method: :post do %>
		  <span>
			  Bravo !! <i class="fas fa-hiking"></i>
			  <%= @post.bravos.count %>
			</span>
		<% end %>
	<% end %>
</div>
<div class="row float-right">
  <% if @post.user.id == current_user.id %>
  	<%= link_to "", edit_post_path(@post), class:"btn btn-default fas fa-eraser" %>
  	<%= link_to "", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-default fas fa-trash-alt" %>
  <% end %>
</div>
<div class="row mt-5 mb-5">
  <div class="col-xs-6 offset-xs-3">
    <p>
      <%= link_to user_path(@post.user) do %>
        <%= attachment_image_tag(@post.user, :avatar, size: "60x60", class:"rounded-circle", fallback: "no_image.png") %>
        <%= @post.user.name %>
      <% end %>
    </p>
  </div>
</div>
<div class="row mt-5">
  <div class="col-xs-7">
    <p>
      <%= @post.content %>
      <%= attachment_image_tag(@post, :image, size: "150x150") %>
    </p>
  </div>
</div>
<div class="row row justify-content-center mt-5">
  <div class="d-flex justify-content-around">
    <div class="col-xs-12">
      <table class="table table hover">
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to user_path(comment.user) do %>
  							<%= attachment_image_tag(comment.user, :avatar, size: "60x60", class:"rounded-circle", fallback: "no-image-mini.jpg") %><br>
  							<%= comment.user.name %>
  						<% end %>
            </td>
            <td>
              <%= comment.comment %>
            </td>
          <% if comment.user_id == current_user.id %>
						<td>
						  <%= link_to "", post_post_comment_path(@post.id, comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-danger fas fa-trash-alt" %>
						</td>
					<% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
      

<div class="row row justify-content-center mt-5">
  <div class="d-flex justify-content-around">
    <div class="col-xs-12">
      <%= form_with(model:[@post, @comment], local: true) do |f| %>
				<%= f.text_area :comment, class:"form-control", placeholder:"コメントする" %><br>
				<%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
          <i class="far fa-comment-dots"></i>
        <% end %>
	    <% end %>
	  </div>
  </div>
</div>
<%= link_to "", commitment_path(@commitment), class:"fas fa-arrow-alt-circle-left" %>