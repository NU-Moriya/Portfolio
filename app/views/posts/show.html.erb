<div class="row mt-n5">
  <%= link_to "", commitment_path(@commitment), class:"fas fa-arrow-alt-circle-left" %>
</div>
<div class="row justify-content-center mt-n5">
  <div class="topic-name">
    <h1>Detail...</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-2 offset-5">
    <i class="fas fa-comment pr-4"><%= @comments.count %></i>
    <i id="bravos_buttons_<%= @post.id %>">
       <%= render partial: 'bravos/bravo', locals: { post: @post} %>
    </i>
  </div>
</div>

<div class="row mt-5 mb-5">
  <div class="col-sm-4 bor">
    <p>
      <%= link_to user_path(@post.user), style:"color: black;" do %>
        <%= attachment_image_tag(@post.user, :avatar, size: "60x60", class:"rounded-circle", fallback: "no_image.png") %>
        <%= @post.user.name %>
      <% end %>
    </p>
    <p>
      <%= @post.content %>
      <%= attachment_image_tag(@post, :image, size: "150x150") %>
    </p>
    <div class="col-sm-3 offset-2">
    <% if @post.user.id == current_user.id %>
    	<%= link_to "", edit_post_path(@post), class:"fas fa-eraser", style:"padding-right: 10px; color: #66FF33;" %>
    	<%= link_to "", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"fas fa-trash-alt", style:"color: #FF3366" %>
    <% end %>
    </div>
  </div>
  <div class="col-sm-8">
    <table class="table table hover">
      <% @comments.each do |comment| %>
        <tr>
          <td class="comment_user">
            <%= link_to user_path(comment.user) do %>
							<%= attachment_image_tag(comment.user, :avatar, size: "60x60", class:"rounded-circle", fallback: "no-image-mini.jpg") %><br>
							<%= comment.user.name %>
						<% end %>
          </td>
          <td>
            <%= comment.comment %>
          </td>
        <% if comment.user_id == current_user.id %>
					<td>
					  <%= link_to "", post_post_comment_path(@post.id, comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-danger fas fa-trash-alt" %>
					</td>
				<% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>


<div class="row row justify-content-center mt-5">
  <div class="d-flex justify-content-around">
    <div class="col-sm-12">
      <%= form_with(model:[@post, @comment], local: true) do |f| %>
				<%= f.text_area :comment, size:"30x5", class:"form-control", placeholder:"コメントする" %>
				<%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
          <i class="far fa-comment-dots"></i>
        <% end %>
	    <% end %>
	  </div>
  </div>
</div>
