<div class="row justify-content-center mt-n5">
  <div class="topic-name">
    <h1>Edit...
      <i class="fas fa-pencil-alt"></i>
    </h1>
  </div>
</div>
<div class="edit col-sm-6 offset-sm-3 mt-5">
  <%= form_with(model:[@post], local: true) do |f| %>
  	<%= f.text_area :content, class:"form-control", placeholder:"こだわりをシェアする" %>
  	<%= f.attachment_field :image, class:"form-control far fa-image" %>
  	<%= f.submit "Change !!" %>
  <% end %>
  <%= link_to "", post_path(@post), class:"fas fa-arrow-alt-circle-left" %>
</div>