<div class="row">
  <div class="topic-name mx-auto">
    <h1>こだわりさん information</h1>
  </div>
</div>

<div class = "container">
  <div class="row mt-5">
    <div class="col-6">
      <div class="row">
        <div class="col-12 text-center">
          <%= attachment_image_tag(@user, :avatar, size: "250x250", class:"rounded-circle", fallback: "no_image.png", format: "jpg") %>
        </div>
        <div class = "col-12 text-center">
          <div class="user-name mt-2 mb-2">
            <%= @user.name %>
          </div>
        </div>
        <div class ="col-12 text-center">
          <div class="user-id mb-3">
            @<%= @user.account_id %>
          </div>
        </div>
        <div class ="about-me col-6 offset-3">
          <i class="fas fa-bullhorn"></i> about me !!<br>
          <%= @user.introduction %>
        </div>
      </div>
      <div class="row mt-3">
        <% if @user.id == current_user.id %>
          <div class="offset-3 col-3">
            <%= link_to "", connects_path(@user), class:"far fa-envelope fa-2x" %>
          </div>
          <div class="col-3">
            <%= link_to "", edit_user_path(@user), class:"fas fa-user-edit fa-lg" %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="dm-funciton mb-3">
          <% unless @user.id == current_user.id %>
            <% if @isConnect == true %>
              <p class="user-show-room"><a href="/connects/<%= @connectId %>" class="btn btn-primary btn-lg">チャットへ</a>
            <% else %>
              <%= form_for @connect do |f| %>
                <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row btn-field">
        <% if current_user.admin? %>
          <%= link_to "User一覧へ", admin_users_path, class:"btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>



    <div class="col-6">
      <i class="fas fa-check">
        <span>check!!</span>
      </i>
      <div class="border border-warning rounded ">
        <table class="table table-hover">
          <tr>
            <th class="text-center">\ こだわり Room 一覧 /</th>
          </tr>
          <% @commitments.each do |commitment| %>
          <tr>
            <td class="text-center">
              <%= link_to commitment.room_name, commitment_path(commitment.id) %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
