<!DOCTYPE html>
<html>
  <head>
    <title>こだわLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/4254070997.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="wrapper ">

      <div id="pc-menu">
        <%= render 'layouts/header' %>
      </div>
      <div id="sp-menu">
        <%= render 'layouts/sp-header' %>
      </div>
      
      <div class="container-fulid">
        <div class="mt-3 ml-5 mb-0">
          <% if notice %>
            <span class="notice">
              <%= notice %>
            </span>
          <% elsif alert %>
            <span class="notice">
              <%= notice %>
            </spa>
          <% end %>
          <%= yield %>
        </div>
      </div>
      
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
