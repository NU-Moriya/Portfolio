<div class="row justify-content-center mb-5">
  <div class="topic-name">
    <h1>こだわりRoom' s
      <i class="fas fa-person-booth"></i>
    </h1>
  </div>
</div>
<div class="row mt-5">
  <div class="col-sm-4">
    <div class="row form_search mt-5">
      <%= form_with url: commitments_search_path, method: :get, local: true do |f| %>
        <i class="fas fa-search"></i>
        <%= f.label :content, "Room's keyword" %><br>
        <%= f.text_field :content, placeholder:"キーワード" %><br>
        <%= f.submit 'Go !!' %>
      <% end %>
    </div>
    <div class="row room_name mt-5">
      <%= form_with model:@commitment, local:true do |f| %>
        <i class="fas fa-magic"></i>
        <%= f.label :room_name, "New Room's name" %><br>
        <%= f.text_field :room_name, size:"28x2", class:'col-sm-12' %><br>
        <%= f.submit "create !!" %>
      <% end %>
    </div>
  </div>

  <div class="col-sm-8 pt-3">
    <div class="row">
      <% @commitments.each do |commitment| %>
        <div class="col-sm-4 box-commitment">
          <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
              <div class="card-header">
                <h4 class="font-weight-normal">
                  <%= commitment.room_name %>
                </h4>
              </div>
              <div class="card-body">
                <h6>Knock !!</h6>
                <h1 class="card-title pricing-card-title"><i class="fas fa-door-open"></i></h1>
                  <%= link_to "Enter your .. !!", commitment_path(commitment.id), class:"btn btn-outline-secondary btn-lg btn-block" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @commitments %>
</div>


